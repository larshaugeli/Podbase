<Page
    x:Class="Podbase.APP.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid
        x:Name="ContentArea"
        Margin="24,0,24,10">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}" >
            <Hub Orientation="Vertical" Margin="0,78,0,0">
                <HubSection Header="Popular podcasts" Height="250">
                    <DataTemplate>
                        <Grid/>
                    </DataTemplate>
                </HubSection>
                <HubSection Header="Statistics about your profile and podcasts">
                    <DataTemplate>
                        <Grid/>
                    </DataTemplate>
                </HubSection>
            </Hub>


        </Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Text="Welcome User!" FontSize="30" FontFamily="Calibri"  TextWrapping="Wrap" VerticalAlignment="Top"/>
    </Grid>
</Page>
