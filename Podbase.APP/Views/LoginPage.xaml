<Page
    x:Class="Podbase.APP.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:Podbase.APP.Views"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Grid
        x:Name="ContentArea"
        Margin="{StaticResource MediumLeftRightMargin}">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <!--The SystemControlPageBackgroundChromeLowBrush background represents where you should place your content. 
                Place your content here.-->
            <TextBlock Text="Login" TextAlignment="Center" FontSize="50" FontWeight="ExtraBold"/>
            <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="471,244,0,0" VerticalAlignment="Top" Height="60" Width="643"/>
            <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="471,423,0,0" VerticalAlignment="Top" Height="60" Width="643"/>
            <TextBlock HorizontalAlignment="Left" Margin="242,258,0,0" Text="Username:" FontSize="24" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="138"/>
            <TextBlock HorizontalAlignment="Left" Margin="242,451,0,0" Text="Password:" FontSize="24" TextWrapping="Wrap" VerticalAlignment="Top" Height="40" Width="145" />
            <Button Content="Log in" FontSize="24"  HorizontalAlignment="Left" Margin="405,700,0,0" VerticalAlignment="Top" Height="80" Width="239"/>
            <Button Content="Create Account" FontSize="24" HorizontalAlignment="Left" Margin="791,700,0,0" VerticalAlignment="Top" Height="80" Width="230"/>
        </Grid>
    </Grid>

